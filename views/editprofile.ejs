<div class="tab-pane" id="blue" data-user-id="<%=user.id%>">
    <div class="row">
        <!-- left column -->
        <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="text-center">
                <img src="" id="avatar" class="avatar img-circle img-thumbnail" alt="avatar">
            </div>
        </div>
        <!-- edit form column -->
        <div class="col-md-8 col-sm-6 col-xs-12 personal-info">


            <h3>Personal info</h3>
            <form class="form-horizontal" role="form" method="post">
                <div class="form-group">
                    <label class="col-md-3 control-label">Email:</label>
                    <div class="col-md-8">
                        <input class="form-control" type="text" name="email" value="<%=user.email%>">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Twitter:</label>
                    <div class="col-md-8">
                        <input id="first_name" class="form-control"  name="twitter" type="text" value="<%=user.twitter%>">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Facebook:</label>
                    <div class="col-md-8">
                        <input id="last_name" class="form-control" name="facebook" type="text" value="<%=user.facebook%>">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Bio:</label>
                    <div class="col-md-8">
                        <textarea class="form-control" type="text" name="description"><%=user.description%></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-8">
                        <input class="btn btn-primary" value="Save Changes" type="submit">
                        <span></span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
</div>
</div>

</div>
</div>
<% include footer %>
<script>
    $(function(){
    //    GET USER_ID FROM PAGE;
        var user_id = $("*[data-user-id]").data().userId;
        var url = "https://api.soundcloud.com/users/"+ user_id + ".json?client_id=da017f641a7d7c3ba80e192b87997299";
        $.ajax({
            url: url,
            method: 'GET',
            dataType: 'json',
            contentType: 'application/json'
        }).done(function(res){
            console.log(res);
            $('.avatar').attr('src', res.avatar_url);
            $('#full_name').html(res.full_name);
            $('#first_name').html(res.first_name);
            $('#permalink_url').attr('href', res.permalink_url);
            $('#country').html(res.country);
            $('#city').html(res.city);
            //$('#description').html(res.description);

        }).fail();

    });
</script>