<% include header %>

<span class="header"><h1><span class="headerBGColor">Create a playlist!</span></h1></span>
<div class="row">
    <div class="col-lg-12">

        <form class="form-horizontal createPlaylistForm" role="form">
            <div class="form-group">
                <label for=playlist_embed">Enter the embed code from SoundCloud:
                    <br>
                    <a href="" id="link">Example</a>
                    <br>
                    <pre id="example"><xmp><iframe width="100%" height="450" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/playlists/5194919&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false&amp;visual=true"></iframe></xmp>
                    </pre>
                </label>
                <div>
                    <input type="text" class="form-control" id="playlist_embed" name="playlist_embed" placeholder="embed code">
                </div>
            </div>
            <div class="form-group">
                <label for="mood_name">Tag the playlist with a mood:</label>
                <div>
                    <input type="text" class="form-control" name="mood_name" id="mood_name" placeholder="mood tag">
                </div>
            </div>
            <div class="form-group">
                <div>
                    <button type="submit" class="btn btn-default">Create Playlist</button>
                </div>
            </div>
        </form>

    </div>
</div>

<% include footer %>
